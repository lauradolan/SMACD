<div class="card shadow border-left-primary py-2">
    <div class="card-body">
        <div class="row align-items-center no-gutters">
            <div class="col mr-2">
                <div class="text-uppercase text-primary font-weight-bold text-xs mb-1"><span>@ServicePortArtifact.Host @($"{ServicePortArtifact.Protocol}/{ServicePortArtifact.Port}")</span></div>
                <div class="text-dark text-monospace h7 mb-0">
                    @if (!string.IsNullOrEmpty(Metadata.ServiceName))
                    {
                        <span>Running Service '@Metadata.ServiceName'</span>
                    }
                    else
                    {
                        <span>Running Unknown Service</span>
                    }
                </div>
            </div>
            <div class="col-auto"><i class="fas fa-plug fa-2x text-gray-300"></i></div>
        </div>
    </div>
</div>

@code
{
    [Parameter]
    public Artifact Artifact { get; set; }
    public ServicePortArtifact ServicePortArtifact => Artifact as ServicePortArtifact;
    public Metadata.ServicePortMetadata Metadata => ServicePortArtifact?.Metadata;
}